<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/navigation_bar</item>
        <item name="colorPrimaryDark">@color/navigation_bar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!--<item name="android:navigationBarColor">@color/navigation_bar</item>-->
    </style>

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@color/text_color1</item>
        <item name="android:textSize">16dp</item>
        <item name="android:colorControlNormal">@android:color/holo_blue_dark</item>
        <!--<item name="android:navigationBarColor">@color/navigation_bar</item>-->
    </style>

    <style name="Header_Button">
        <item name="android:layout_width">@dimen/btn_height_header</item>
        <item name="android:layout_height">@dimen/btn_height_header</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>
</resources>