<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/navigation_bar</item>
        <item name="colorPrimaryDark">@color/navigation_bar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ThemeActivityFirst" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
        <item name="colorPrimary">@color/navigation_bar</item>
        <item name="colorPrimaryDark">@color/navigation_bar</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/text_color1</item>
        <item name="android:textSize">16dp</item>
    </style>

    <!-- Base style begin -->

    <style name="BaseStyle_ButtonOK" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:textColor">@drawable/button_ok_text_color</item>
        <item name="android:background">@drawable/bg_btn1_state</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="BaseStyle_ButtonCancel" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:textColor">@color/text_btn2_color_state</item>
        <item name="android:background">@drawable/bg_btn_close</item>
        <item name="android:textSize">16dp</item>
    </style>

    <!-- Base style end -->

    <style name="DlgFlash_Animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="EditTextMV">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:background">@drawable/edittext_shadow</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/hint_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">45dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>
    <style name="EditTextMVIconLeft">
        <item name="android:layout_width">@dimen/icon_inner_edittext_size</item>
        <item name="android:layout_height">@dimen/icon_inner_edittext_size</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_gravity">left|center_vertical</item>
    </style>
    <style name="EditTextMVIconRight">
        <item name="android:layout_width">@dimen/icon_inner_edittext_size</item>
        <item name="android:layout_height">@dimen/icon_inner_edittext_size</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_gravity">right|center_vertical</item>
    </style>


    <style name="Header_Button">
        <item name="android:layout_width">@dimen/btn_height_header</item>
        <item name="android:layout_height">@dimen/btn_height_header</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@null</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

