    <style name="AppTheme.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TextTitleApp">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">26dp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="RadioButtonMV">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">30dp</item>
        <item name="android:drawableRight">@drawable/btn_radio</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <style name="flashButtonStyle">
        <item name="android:button">@drawable/flash_button</item>
<!--        <item name="android:scaleX">0.9</item>-->
<!--        <item name="android:scaleY">0.9</item>-->
    </style>

    <style name="bottomBarTextview">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HomeButton" parent="CardView">
        <item name="android:layout_width">@dimen/mm_btn_size</item>
        <item name="android:layout_height">@dimen/mm_btn_size</item>
        <item name="android:layout_columnWeight" tools:ignore="NewApi">1</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">5dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="HomeButton.ImageView">
        <item name="android:layout_width">66dp</item>
        <item name="android:layout_height">66dp</item>
        <item name="android:layout_marginBottom">30dp</item>
    </style>

    <style name="HomeButton.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:maxWidth">140dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="PopupFilterGroupTitleStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

</resources>
