<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/dialog_bg_radius_10">
    <TextView
        android:id="@+id/title"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="@string/choose_language"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_margin="8dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="10dp">
        <RadioGroup
            android:id="@+id/radioGroup"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/dialogCancel"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_gravity="end|center_vertical"
            android:background="@drawable/bg_btn_negative"
            android:layout_marginRight="15dp"
            android:clickable="true">

            <com.mq.myvtg.ui.TVRobotoBold
                android:id="@+id/tvNagetive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:textAlignment="center"
                android:textColor="@color/white_alpha100"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialogOK"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_gravity="end|center_vertical"
            android:background="@drawable/version_2_background_button_login"
            android:clickable="true">

            <com.mq.myvtg.ui.TVRobotoBold
                android:id="@+id/tvPositive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ok"
                android:textAlignment="center"
                android:textColor="@color/white_alpha100"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>